    System.out.println(user.getCssValue("color"));
    System.out.println(user.getSize());
    System.out.println(user.getCssValue("font"));


    System.out.println(user.getAttribute("xPath"));

    System.out.println(pass.getText());
    System.out.println(user.getLocation());
    System.out.println(pass.getTagName());

//    if(pass.isDisplayed()) {
