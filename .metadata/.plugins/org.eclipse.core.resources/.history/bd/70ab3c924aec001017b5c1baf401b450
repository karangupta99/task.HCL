    // btn-text
    @Test
   public void signup() throws InterruptedException {
    	
	   driver = new ChromeDriver();
	   driver.get("https://qabrains.com/auth/login");
	 
	   
	   WebElement email = driver.findElement(By.name("email"));
	   assertTrue(email.isDisplayed());
	   WebElement passWord = driver.findElement(By.name("password"));
	   assertTrue(passWord.isDisplayed());
	   email.sendKeys("karangupta9346@gmail.com");
	   passWord.sendKeys("heyBaby");
	   WebElement SignUpBtn = driver.findElement(By.className("after"));
	   assertTrue( SignUpBtn .isEnabled());
	   
	   SignUpBtn.click();
	   Thread.sleep(2000);
	   driver.quit();
	   
   }

    
    
	
    
